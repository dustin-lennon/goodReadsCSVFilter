{
  "name": "goodreadscsvfilter",
  "version": "1.1.2",
  "description": "Intelligent series continuation weighting for GoodReads book selection",
  "main": "dist/gui/main.js",
  "scripts": {
    "start": "pnpm run build:dialog && ts-node src/cli.ts",
    "start:gui": "pnpm run build:gui && electron dist/gui/main.js",
    "build:dialog": "tsc src/gui/fileDialog.ts --outDir dist/gui",
    "build:gui": "tsc --project tsconfig.build.json && cp src/gui/renderer.html src/gui/renderer.js dist/gui/",
    "build:executable": "node build-executable.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,js}\" \"tests/**/*.{ts,js}\"",
    "format": "prettier --write \"src/**/*.{ts,js,tsx}\" \"tests/**/*.{ts,js,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Dustin Lennon",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/server-destroy": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "concurrently": "^9.2.1",
    "electron": "^37.10.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^153.0.0",
    "open": "^10.2.0",
    "server-destroy": "^1.0.1"
  },
  "build": {
    "appId": "com.goodreads.csvfilter",
    "productName": "GoodReads Book Weighting System",
    "directories": {
      "output": "dist-executable"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "client_secret.json",
        "to": "Resources/client_secret.json"
      },
      {
        "from": "sheet-id.txt",
        "to": "Resources/sheet-id.txt"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.{ts,js,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
